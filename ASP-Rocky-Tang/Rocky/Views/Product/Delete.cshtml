
@model Rocky_Models.Product
@*Here in the "form" to identify where are data supposed to go*@
@*Here to go Create action*@
@*enctype="multipart/form-data" can make displaying image work*@
@{ var title = "Delete Product"; }
@using Rocky_Utility
<form method="post">
    @*this is used to save the value of Id of the Model, or the id will  be 0*@


    <div class="border p-3">
        @*ModelOnly,All,None*@
        <input asp-for="Id" hidden />
        <div class="form-group" row>
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        @*TEXTBOX HERE*@
                        @*Validation should match with Data Model's Attribution'*@
                        @*The Name of Object will be put here !*@
                        <input asp-for="Name" class="form-control" readonly />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <!--DISPLAY ORDER-->
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        @*TEXTBOX HERE*@
                        @*Validation should match with Data Model's Attribution'*@
                        @*The DisplayOrder of Object will be put here !*@
                        <input asp-for="Price" class="form-control" readonly />

                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <!--DISPLAY ORDER-->
                        <label asp-for="Discription"></label>
                    </div>
                    <div class="col-8">
                        @*TEXTBOX HERE*@
                        @*Validation should match with Data Model's Attribution'*@
                        @*The DisplayOrder of Object will be put here !*@
                        @*<input asp-for="Product.Discription" class="form-control" />*@
                        <textarea asp-for="Discription" class="form-control summernote"></textarea>

                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <!--DISPLAY ORDER-->
                        @*<label asp-for="Image"></label>*@
                        Image
                    </div>
                    <div class="col-8">
                        @*TEXTBOX HERE*@
                        @*The DisplayOrder of Object will be put here !*@
                        <input type="file" name="files" id="uploadBox" multiple class="form-control" disabled />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <!--DISPLAY ORDER-->
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input value="@Model.Category.Name" class="form-control" readonly />


                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <!--DISPLAY ORDER-->
                        <label asp-for="ApplicationId"></label>
                    </div>
                    <div class="col-8">
                        <input value="@Model.ApplicationType.Name" class="form-control" readonly />


                    </div>

                </div>




                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">

                            @*Delete BUTTON*@
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />

                        </div>

                        <div class="col">
                            @*BACK BUTTON*@
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>

                    </div>


                </div>
            </div>
            <div class="col-4">
                @* Here is little tricky *@
                @*When user clicks "creat new product", at this moment, the id will be 0
                    while, if user clicks "edit", then the productID will be available,which will not equal to 0*@
                @if (Model.Id != 0)
                {
                    <img asp-for="Image" src="@WC.ImagePath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                }

            </div>

        </div>

    </div>
</form>

