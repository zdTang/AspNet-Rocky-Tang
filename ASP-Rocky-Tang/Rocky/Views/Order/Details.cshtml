@model Rocky_Models.ViewModels.OrderVM

<form method="post">
<input asp-for="orderHeader.Id" hidden/>

    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a class="btn btn-outline-info form-control btn-sm" asp-action="index">Back to Orders</a>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">

                                    <input  type="text" class="form-control" asp-for="orderHeader.FullName"/>
                                    <span  asp-validation-for="orderHeader.FullName" class="text-danger"/>


                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">

                                    <input type="text" class="form-control" asp-for="orderHeader.PhoneNumber" />
                                    <span  asp-validation-for="orderHeader.PhoneNumber" class="text-danger"/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">

                                    <input type="text" class="form-control" asp-for="orderHeader.StreetAddress" />
                                    <span  asp-validation-for="orderHeader.StreetAddress" class="text-danger"/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">

                                    <input type="text" class="form-control"  asp-for="orderHeader.City"/>
                                    <span  asp-validation-for="orderHeader.City" class="text-danger"/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">

                                    <input  type="text" class="form-control" asp-for="orderHeader.State"/>
                                    <span  asp-validation-for="orderHeader.State" class="text-danger"/>
                                    <span  class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">

                                    <input  type="text" class="form-control" asp-for="orderHeader.PostalCode"/>
                                    <span  asp-validation-for="orderHeader.PostalCode" class="text-danger"/>
                                   
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">

                                    <input type="text" class="form-control" asp-for="orderHeader.Email"/>
                                    <span  asp-validation-for="orderHeader.Email" class="text-danger"/>
                                   
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">

                                    @*<input type="text" class="form-control" readonly asp-for="orderHeader.OrderDate"/>*@
                                    <input type="text" class="form-control" readonly value="@Model.orderHeader.OrderDate.ToShortDateString()"/>
                                

                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                     <input id="shippingDate" type="text" readonly class="form-control" value="@Model.orderHeader.ShippingDate.ToShortDateString()" /> 
                                   @* <input id="shippingDate" type="text" readonly class="form-control" asp-for="orderHeader.ShippingDate" /> *@                                
                            </div>
                             </div>

                            <div class="row my-1">
                                <div class="col-3">Transaction ID</div>
                                <div class="col-9">
                                    <input type="text" readonly class="form-control"  asp-for="orderHeader.TransactionId"/>
                                    
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Status</div>
                                <div class="col-9">
                                    <input type="text" readonly class="form-control" asp-for="orderHeader.OrderStatus"/>                             
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-9 offset-3">
                                    <input type="submit" value="Update Order Details" class="btn btn-warning form-control"
                                           formaction="/Order/UpdateOrderDetails" formmethod="post" />
                                </div>
                            </div>


                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">Order Summary</span>
                            </h4>
                            <ul class="list-group mb-3">
                               
                                @foreach(var item in Model.orderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                    <div class="row container">
                                        <div class="col-8">
                                            <h6 class="my-0 text-info">@item.Product.Name</h6>
                                            <small class="text-muted">Price : @item.PricePerSqFt</small><br />
                                            <small class="text-muted">Quantity :  @item.Sqft</small>
                                        </div>
                                        <div class="col-4">
                                            <p class="text-success">$@(item.PricePerSqFt * item.Sqft)</p>
                                        </div>
                                    </div>
                                </li>
                                }


                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-6"> 
                                            <h5 class="text-white">Total</h5>
                                        </div>
                                        <div class="col-6 text-right">
                                            <h5 class="text-white">$@Model.orderHeader.FinalOrderTotal</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>


                            <br />
                          @if(Model.orderHeader.OrderStatus==Rocky_Utility.WC.StatusApproved)
                            {
                                 <input type="submit" value="Start Processing" 
                                 formmethod="post"
                                 @*asp-action="StartProcessing"*@
                                  @*formaction="StartProcessing" not work !!!*@
                                 formaction="/Order/StartProcessing"
                                 class="btn btn-info form-control" />
                            }
                          @if(Model.orderHeader.OrderStatus==Rocky_Utility.WC.StatusInProcess)
                            {
                                <input type="submit" value="Ship Order" 
                                formmethod="post" 
                                @*asp-action="ShipOrder"*@
                                @*formaction="ShipOrder" not work !!!*@
                                formaction="/Order/ShipOrder"
                                class="btn btn-primary form-control" />
                            }
                           
                            @if(Model.orderHeader.OrderStatus!=Rocky_Utility.WC.StatusRefunded && Model.orderHeader.OrderStatus!=Rocky_Utility.WC.StatusCancelled)
                            {
                                <div class="pt-2">
                            <button type="submit"
                                    class="btn btn-danger form-control"
                                    formaction="/Order/CancelOrder"
                                    formmethod="post">
                                Cancel Order
                            </button>
                        </div>
                            }
                            

                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial"/>

    <script>
        console.log('order-detail view!')
        $(function(){
            //console.log("here");
       if( $("#shippingDate").val()=="1/1/0001"){
           //console.log("here2");
           $("#shippingDate").val("")
       }
    }
    )
    </script>
    
}

