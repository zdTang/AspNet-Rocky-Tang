@model Rocky_Models.ViewModels.ProductUserVM
@using Rocky_Utility
@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Summary</h1>

<form method="post" id="payment-form">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Order Summary
                    </div>
                    <div class="col-6 text-right">
                        <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to Cart</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">User Details:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-9">
                                        @*<input type="text" value="@Model.ApplicationUser.FullName" class="form-control" />*@
                                        <input type="text" asp-for="ApplicationUser.FullName" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.FullName" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone</label>
                                    </div>
                                    <div class="col-9">
                                        @*<input type="text" value="@Model.ApplicationUser.PhoneNumber" class="form-control" />*@
                                        <input type="text" asp-for="ApplicationUser.PhoneNumber" required class="form-control" />
                                        <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>

                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        @*Email field is defined by the Identity package, we cannot have way to add [Required] to
                                            the model, so that we can add here !!!!*@
                                        <input type="text" asp-for="ApplicationUser.Email" required class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>

                                @if (User.IsInRole(WC.AdminRole))
                                {

                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Street Address</label>
                                        </div>
                                        <div class="col-9">
                                            @*<input type="text" value="@Model.ApplicationUser.Email" class="form-control" />*@
                                            <input type="text" asp-for="ApplicationUser.StreetAddress" required class="form-control" />
                                            <span asp-validation-for="ApplicationUser.StreetAddress" class="text-danger"></span>
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>City</label>
                                        </div>
                                        <div class="col-9">
                                            @*<input type="text" value="@Model.ApplicationUser.Email" class="form-control" />*@
                                            <input type="text" asp-for="ApplicationUser.City" required class="form-control" />
                                            <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>State</label>
                                        </div>
                                        <div class="col-9">
                                            @*<input type="text" value="@Model.ApplicationUser.Email" class="form-control" />*@
                                            <input type="text" asp-for="ApplicationUser.State" required class="form-control" />
                                            <span asp-validation-for="ApplicationUser.State" class="text-danger"></span>
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>PostalCode</label>
                                        </div>
                                        <div class="col-9">
                                            @*<input type="text" value="@Model.ApplicationUser.Email" class="form-control" />*@
                                            <input type="text" asp-for="ApplicationUser.PostalCode" required class="form-control" />
                                            <span asp-validation-for="ApplicationUser.PostalCode" class="text-danger"></span>
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="col-12 col-lg-5 row">
 
                                    <div class="col-12">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-info">Order Summary:</span>
                                        </h4>
                                        <ul class="list-group mb-3">
                                            @*foreach vs for*@
                                            @*use FOR other than FOREACH
        only Id and Name will exist in Product object and send back*@
                                            @{ var orderTotal = 0.0;}
                                            @for (var i = 0; i < Model.ProductList.Count(); i++)
                                            {
                                                // Must have this fields.  or the Summary-post cannot get the information
                                                <input type="hidden" asp-for="ProductList[i].Id" />
                                                <input type="hidden" asp-for="ProductList[i].Name" />
                                                <input type="hidden" asp-for="@Model.ProductList[i].Price" />
                                                <input type="hidden" asp-for="@Model.ProductList[i].TempSqFt" />
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <div>
                                                        <h6 class="my-0">@Model.ProductList[i].Name</h6>
                                                        @if (User.IsInRole(WC.AdminRole))
                                                        {
                                                            <small class="text-muted">Sqft: @Model.ProductList[i].TempSqFt</small>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-muted">Price per Sqft:@Model.ProductList[i].Price</small>
                                                        }

                                                    </div>
                                                    @if (User.IsInRole(WC.AdminRole))
                                                    {
                                                        <span class="text-muted">$@(Model.ProductList[i].Price * Model.ProductList[i].TempSqFt)</span>
                                                    }


                                                </li>
                                                orderTotal += Model.ProductList[i].Price * Model.ProductList[i].TempSqFt;
                                            }
                                            @if (User.IsInRole(WC.AdminRole))
                                            {
                                                <li class="list-group-item d-flex justify-content-between bg-light">
                                                    <small class="text-info">Total(USD) </small>
                                                    <strong class="text-info">$@orderTotal </strong>
                                                </li>

                                            }


                                        </ul>
                                    </div>
               
                                @if (User.IsInRole(WC.AdminRole))
                                        {
                                    //Braintree Styff

                                    <div class="col-12">
                     
                                            <div class="container">
                                                <div id="dropin-container"></div>
                                                <input id="nonce" name="payment_method_nonce" type="hidden"/>
                                            </div>
   
                                    </div>

                                }

                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            @if (User.IsInRole(WC.AdminRole))
                            {
                                // go to Cart/SummaryPost => will sent an Email to Admain
                                <button class="btn btn-success form-control" id="submit-button">Submit Order</button>
                            }
                            else
                            {
                                // go to Cart/SummaryPost => will sent an Email to Admain
                                <button type="submit" class="btn btn-primary form-control">Submit Inquiry</button>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://js.braintreegateway.com/web/dropin/1.31.2/js/dropin.min.js"></script>

    <script>
        // Step two: create a dropin instance using that container (or a string
        //   that functions as a query selector such as `#dropin-container`)
        var client_token = "@ViewBag.ClientToken";                      //   this Token is generated from Cart/Summary(get)
        var form = document.querySelector("#payment-form");
        braintree.dropin.create({
            container: document.getElementById('dropin-container'),
            authorization: client_token                  //"Client Token From Cart/Summary(get)"
            // ...plus remaining configuration
        }, (error, dropinInstance) => {
            if (error) console.error(error);
            console.log("==dropinInstance==");
            console.log(dropinInstance);
            // Use `dropinInstance` here
            // Methods documented at https://braintree.github.io/braintree-web-drop-in/docs/current/Dropin.html
            // see here: https://developer.paypal.com/braintree/docs/start/hello-client
            form.addEventListener('submit', event => {
                event.preventDefault();
                // Add the nonce to the form and submit
                dropinInstance.requestPaymentMethod((err, payload) => {
                    if (err) console.error(err);


                    console.dir("==payload==");
                    console.dir(payload);
                    console.log(payload.nonce);
                      // submit payload.nonce to my Server
                      // Step four: when the user is ready to complete their
                      //   transaction, use the dropinInstance to get a payment
                      //   method nonce for the user's selected payment method, then add
                      //   it a the hidden field before submitting the complete form to
                      //   a server-side integration
                    document.querySelector('#nonce').value = payload.nonce;
                    form.submit();
                });
            })


        });


    </script>

    <script>
        console.log("Cart/summary.cshtml")
    </script>
}