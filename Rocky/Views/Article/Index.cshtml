@*@using Rocky.Models.Category;*@
@model IEnumerable<Rocky.Models.Article>

    @{
    ViewData["Title"] = "Article";
    }

    <div class="container p-3">

        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Product List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Upsert" class="btn btn-primary">
                    @*At this time, it will create new product, the ID==NULL!*@
                    <i class="fas fa-plus"></i> &nbsp; Create New Article
                </a>
            </div>
        </div>

        <br /><br />

        <!--thead used to group head tag !! -->


   @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Article Name</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <!-- don't miss @@ before obj'-->
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.Price</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                @*This will call "upsert" with a ID*@
                                @*<a> tag I know anchor tags are usually just for GETs,*@
                                <a asp-route-Key="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-route-Key="@obj.Id" asp-action="Delete" class="btn btn-danger mx-1">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product exists.</p>
    }

    </div>



