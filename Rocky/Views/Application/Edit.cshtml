@model Rocky.Models.ApplicationType
@*Here in the "form" to identify where are data supposed to go*@
@*Here to go Create action*@
<form method="post">
    @*this is used to save the value of Id of the Model, or the id will  be 0*@
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*ModelOnly,All,None*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" row>
            <h2 class="text-info pl-3">Edit Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        @*TEXTBOX HERE*@
                        @*Validation should match with Data Model's Attribution'*@
                        @*The Name of Object will be put here !*@
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <!--DISPLAY ORDER-->
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        @*TEXTBOX HERE*@
                        @*Validation should match with Data Model's Attribution'*@
                        @*The DisplayOrder of Object will be put here !*@
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @*CREATE BUTTON*@
                            <input type="submit" class="btn btn-danger w-100" value="Update" />
                        </div>
                        <div class="col">
                            @*BACK BUTTON*@
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>
</form>

@*To do client-side validation, add the following lines*@

@section Scripts{ 
@{<partial name="_ValidationScriptsPartial" />}
}




