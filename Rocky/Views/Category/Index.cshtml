@*@using Rocky.Models.Category;*@
@model IEnumerable<Rocky.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Create New Category</a> 
        </div>
    </div>

    <br/><br/>

    <!--thead used to group head tag !! -->


    @if (Model.Count() > 0) 
    {
        <table class="table table-bordered table-striped" style="width:100%" >
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <!-- don't miss @@ before obj'-->
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.DisplayOrder</td>
                    <td></td>
                </tr>
                }
            </tbody>
        </table>  
    }
            else
            {
                <p>No Category exists.</p>
            }

</div>

